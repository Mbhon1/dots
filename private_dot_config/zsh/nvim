# Neovim switcher
#Download distros on your own and pplace them in the .config directory and not the nvim directory
function nvims() {
  items=("default" "kickstart" "LazyVim" "NvChadVim" "AstroNvim")
  config=$(printf "%s\n" "${items[@]}" | fzf --prompt="îŸ… Neovim Config >> " --height=~50% --layout=reverse --border --exit-0)
  if [[ -z $config ]]; then
    echo "Nothing Selected"
    return 0
  elif [[ $config == "default" ]]; then
    config=""
  fi
  NVIM_APPNAME=$config nvim $@
}

bindkey -s ^a "nvims\n"

